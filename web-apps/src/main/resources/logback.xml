<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="BASIC_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%method\(\) - %msg%n</pattern>
		</encoder>
	</appender>
	
	<root level="ALL">
		<appender-ref ref="BASIC_STDOUT" />
	</root>
</configuration>